<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>

    <xacro:include filename="$(find robot_description)/robots/parts/roller/roller.gazebo"/>

    <xacro:macro name="roller_v0" params="prefix parent *joint_origin *joint_axis">
        <joint name="${prefix}_roller_joint" type="continuous">
            <xacro:insert_block name="joint_origin"/>
            <parent link="${parent}"/>
            <child link="${prefix}_roller_link"/>
            <xacro:insert_block name="joint_axis"/>
        </joint>

        <link name="${prefix}_roller_link">
            <visual>
                <geometry>
                    <mesh filename="file://$(find robot_description)/meshes/STL/roller.stl"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="file://$(find robot_description)/meshes/STL/roller.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0.0 0.0 0.0"/>
                <mass value="0.05"/>
                <inertia ixx="3.016188501488752e-06" ixy="0.0" ixz="0.0" iyy="3.0159901722193675e-06" iyz="0.0" izz="2.6988448685046652e-06"/>
            </inertial>
            <surface>
                <friction>
                    <ode>
                        <mu1>0.6</mu1>
                        <mu2>0.6</mu2>
                        <kp>100</kp>
                        <kd>1</kd>
                    </ode>
                </friction>
                <bounce>
                    <restitution_coefficient>0</restitution_coefficient>
                    <threshold>0</threshold>
                </bounce>
                <contact>
                    <ode>
                        <max_vel>10</max_vel>
                    </ode>
                </contact>
            </surface>
        </link>
    </xacro:macro>

</robot>