<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="light_grey">
        <color rgba="0.8 0.8 0.8 1.0"/>
    </material>

    <xacro:include filename="$(find robot_description)/robots/parts/omni_wheel/omni_wheel.gazebo"/>

    <xacro:macro name="wheel_v0" params="prefix parent *joint_origin *joint_axis">
        <joint name="${prefix}_wheel_joint" type="continuous">
            <xacro:insert_block name="joint_origin"/>
            <parent link="${parent}"/>
            <child link="${prefix}_wheel_link"/>
            <limit effort="100.0" velocity="100.0"/>
            <xacro:insert_block name="joint_axis"/>
        </joint>

        <link name="${prefix}_wheel_link">
            <visual>
                <geometry>
                    <mesh filename="file://$(find robot_description)/meshes/STL/omni_wheel.stl"/>
                </geometry>
                <material name="light_grey"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="file://$(find robot_description)/meshes/STL/omni_wheel.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0.0 0.0 0.0"/>
                <mass value="0.5"/>
                <inertia ixx="0.0004239848706041911" ixy="0.0" ixz="0.0" iyy="0.00042317552087815384" iyz="0.0" izz="0.0007391603337254364"/>
            </inertial>
            <surface>
                <friction>
                    <ode>
                        <mu1>1.0</mu1>
                        <mu2>1.0</mu2>
                        <kp>1e15</kp>
                        <kd>1e13</kd>
                    </ode>
                </friction>
                <bounce>
                    <restitution_coefficient>0.01</restitution_coefficient>
                    <threshold>0</threshold>
                </bounce>
                <contact>
                    <ode>
                        <max_vel>10</max_vel>
                    </ode>
                </contact>
            </surface>
        </link>
    </xacro:macro>
    
</robot>